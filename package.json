{
  "name": "DEMIWARM",
  "version": "1.0.0",
  "description": "DEMIWARM - Whatsapp Automation & Reply Manager",
  "author": {
    "name": "DEV168",
    "email": "data.demigod888@gmail.com"
  },
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "electron-log": "^5.1.5",
    "electron-updater": "^6.2.1",
    "public-ip": "^6.0.2",
    "qrcode-terminal": "^0.12.0",
    "undici": "^6.19.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-store": "^8.2.0"
  },
  "build": {
    "appId": "com.demiwarm.desktop",
    "productName": "DEMIWARM",
    "copyright": "Copyright Â© 2025 DEMIWARM",
    "publish": {
      "provider": "github",
      "owner": "cloudocean32",
      "repo": "demiwarm-desktop"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "access-denied.html",
      "build/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icns/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "DEMIWARM",
      "background": null,
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "sign": false
    },
    "win": {
      "target": "nsis",
      "icon": "build/ico/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    }
  }
}
